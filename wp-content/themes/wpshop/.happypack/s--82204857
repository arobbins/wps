function showUpgrades($) {
  $('.account-view-upgrades').on('click', function (e) {
    e.preventDefault();
    console.log('lieeee');

    $('#edd_sl_license_upgrades').toggleClass('is-hidden');
  });
}

/*

Init Account

*/
